[flake8]
exclude =
    .venv
    .pypy_cache
    .pytest_cache
    .coverage
    entrypoint.sh
    entrypoint.local.sh
    Dockerfile*
    .env
    .env.example
    utils/routing.py
    utils/app.py
max-line-length = 88
per-file-ignores = 
    __init__.py:F401
    *di.py:F405,F403
    *schema.py:E501
    *utils.py:E501
    *test_*.py:E501,F401